<table>
  <tr>
    <th><%=h @current_goal ? @current_goal.name : "All"%> sources</th>
    <th>Location</th>
    <!--th>Doctype</th-->
  </tr>

<% @sources.each do |source| %>
  <tr>
    <td><%=h source %>
      <br />
      <%= link_to 'Edit', edit_source_path(source), :class => 'small' %>
      <%= link_to 'Delete', source, :confirm => 'Are you sure?', :method => :delete, :class => 'small' %>

    </td>
    <td><%=link_to source.location, source.location, { :target => "_blank" } %></td>
    <!--td><%=h source.doctype %></td-->
  </tr>
<% end %>
</table>

<br />

<%= will_paginate @sources %>
