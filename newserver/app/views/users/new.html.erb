<h1>Register</h1>

<%= form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name, "Your Name" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :name, "Username" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :new_password, "Password" %><br />
    <%= f.password_field :new_password %>
  </p>

  <p>
    <%= f.label :new_password_confirmation, "Confirm Password" %><br />
    <%= f.password_field :new_password_confirmation %>
  </p>
  <p>
    <%= f.label :position, "Position" %><br />
    <%= f.text_field :position %>
  </p>
  <p>
    <%= f.label :twitter, "Twitter Username" %><br />
    <%= f.text_field :twitter %>
  </p>
  <p>
    <%= f.label :bio, "Biography" %><br />
    <%= f.text_area :bio, :rows => 3 %>
  </p>
  <p>
    <%= f.submit 'Create', :class => 'bluebutton left' %>
  </p>
<% end %>

  <br /><br />

<%= link_to 'Back', users_path %>
