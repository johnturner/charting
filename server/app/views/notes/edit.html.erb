<h1>Editing note</h1>

<% form_for(@note) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :rows => 5 %>
  </p>
  <p>
    <%= f.submit 'Update', :class => 'bluebutton left' %>
  </p>
<% end %>

  <br/><br/>

<% if @note.source %>

<h3>Source</h3>

<b>Title: </b> <%=h @note.source %><br />
<%=link_to @note.source.location, @note.source.location, :target => "_blank" %><br />
<b>Doctype:</b> <%=h @note.source.doctype %><br />

<br />

<% end %>


<%= link_to 'Show', @note %> |
<%= link_to 'Back', my_notes_path %>
